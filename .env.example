# API Keys and Sensitive Configuration
# Copy this file to .env and fill in your actual API keys

# Twitter API credentials (for sentiment analysis)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Alpha Vantage API (for additional market data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Quandl API (optional)
QUANDL_API_KEY=your_quandl_api_key_here

# Reddit API (for sentiment analysis)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=your_reddit_user_agent_here

# News API (for news sentiment)
NEWS_API_KEY=your_news_api_key_here

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:///data/trading_system.db

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Trading Platform API (for live trading - DEMO ONLY)
TRADING_API_KEY=your_trading_platform_api_key_here
TRADING_API_SECRET=your_trading_platform_api_secret_here
TRADING_BASE_URL=https://api.tradingplatform.com/v1

# Email notifications (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Logging and monitoring
LOG_LEVEL=INFO
ENVIRONMENT=development
